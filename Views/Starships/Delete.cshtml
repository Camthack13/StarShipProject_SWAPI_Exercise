@model StarshipProject.Models.Starship

@{
    ViewData["Title"] = "Delete Starship";
}

<h1>Delete Starship</h1>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this starship?</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Model: @Model.Model</p>
        <p class="card-text">Class: @Model.StarshipClass</p>
        <p class="card-text">Manufacturer: @Model.Manufacturer</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
